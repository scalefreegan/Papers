	keywords = {Biological, Chromatography, Escherichia coli, Gene Expression Profiling, Gene Regulatory Networks, Genetic, genetics/metabolism, Halobacterium salinarum, Liquid, Mass Spectrometry, Messenger, metabolism, methods, Models, Oligonucleotide Array Sequence Analysis, Phenotype, {RNA}, Systems Analysis, Systems Biology, Transcription},
	pages = {64}
}

@article{huttenhower_detailing_2009,
	title = {Detailing regulatory networks through large scale data integration.},
	volume = {25},
