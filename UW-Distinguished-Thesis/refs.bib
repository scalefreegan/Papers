	keywords = {Adenosine Triphosphatases, Archaea, Archaeal, classification/genetics, Evolution, Gene Expression Profiling, Gene Expression Regulation, Genes, Genetic, genetics, Genome, Molecular, Operon, Phylogeny, Promoter Regions, Protein Biosynthesis, {RNA} Transport, Transcription, Transcriptional Activation, Transcriptome},
