	number = {2},
	urldate = {2014-05-07},
	journal = {Molecular Microbiology},
	author = {Wurtmann, Elisabeth J. and Ratushny, Alexander V. and Pan, Min and Beer, Karlyn D. and Aitchison, John D. and Baliga, Nitin S.},
